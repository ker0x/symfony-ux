{
    "name": "@symfony/ux-flatpickr",
    "description": "Datepicker based on Flatpickr for Symfony Forms",
    "license": "MIT",
    "version": "0.0.1",
    "symfony": {
        "controllers": {
            "flatpickr": {
                "main": "dist/flatpickr_controller.js",
                "webpackMode": "eager",
                "fetch": "eager",
                "enabled": true
            }
        }
    },
    "scripts": {
        "build": "babel src -d dist",
        "test": "babel src -d dist && jest",
        "lint": "eslint src test"
    },
    "peerDependencies": {
        "flatpickr": "^4.6.9",
        "stimulus": "^2.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.12.1",
        "@babel/core": "^7.12.3",
        "@babel/plugin-proposal-class-properties": "^7.12.1",
        "@babel/preset-env": "^7.12.7",
        "@symfony/stimulus-testing": "^1.1.0",
        "flatpickr": "^4.6.9",
        "stimulus": "^2.0.0"
    },
    "jest": {
        "testRegex": "test/.*\\.test.js",
        "setupFilesAfterEnv": [
            "./test/setup.js"
        ]
    }
}
